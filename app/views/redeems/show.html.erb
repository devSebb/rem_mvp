<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="text-center">
      <div class="text-6xl mb-4">🎁</div>
      <h2 class="text-3xl font-bold text-gray-900">Redeem Your Gift Card</h2>
      <p class="mt-2 text-sm text-gray-600">
        You've received a gift card worth <%= @gift_card.currency %> <%= @gift_card.amount / 100.0 %>
      </p>
    </div>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_with url: redeem_claim_path, method: :post, local: true, class: "space-y-6" do |form| %>
        <%= hidden_field_tag :token, params[:token] %>

        <!-- Gift Card Info -->
        <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
          <div class="flex items-center">
            <div class="text-2xl mr-3">💰</div>
            <div>
              <h3 class="text-lg font-semibold text-green-800">Gift Card Details</h3>
              <p class="text-green-700">
                <strong>Amount:</strong> <%= @gift_card.currency %> <%= @gift_card.amount / 100.0 %><br>
                <strong>From:</strong> <%= @gift_card.sender.name %>
              </p>
            </div>
          </div>
        </div>

        <!-- OTP Input -->
        <div>
          <%= form.label :otp, "Redemption Code", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :otp, 
                placeholder: "Enter 6-digit code", 
                maxlength: 6,
                pattern: "[0-9]{6}",
                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-green-500 focus:border-green-500 sm:text-sm text-center text-2xl tracking-widest",
                required: true %>
          </div>
          <p class="mt-2 text-sm text-gray-500">
            Enter the 6-digit code you received via WhatsApp, SMS, or email
          </p>
        </div>

        <!-- Merchant Selection -->
        <div>
          <%= form.label :merchant_id, "Choose a Merchant", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.select :merchant_id, 
                options_from_collection_for_select(@merchants, :id, :store_name),
                { prompt: "Select a merchant to redeem at" },
                { class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-green-500 focus:border-green-500 sm:text-sm", required: true } %>
          </div>
        </div>

        <!-- Expiry Warning -->
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
          <div class="flex">
            <div class="text-yellow-400 mr-3">⚠️</div>
            <div class="text-sm text-yellow-800">
              <strong>Important:</strong> Your redemption code expires in 1 hour. 
              Make sure to complete the redemption process soon.
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <div>
          <%= form.submit "Redeem Gift Card", 
              class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition duration-150 ease-in-out" %>
        </div>
      <% end %>

      <!-- Help Section -->
      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300" />
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">Need help?</span>
          </div>
        </div>

        <div class="mt-6 text-center">
          <p class="text-sm text-gray-600">
            Can't find your redemption code? Check your:
          </p>
          <div class="mt-2 flex justify-center space-x-6 text-sm">
            <span class="flex items-center text-gray-500">
              📱 WhatsApp
            </span>
            <span class="flex items-center text-gray-500">
              💬 SMS
            </span>
            <span class="flex items-center text-gray-500">
              📧 Email
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
