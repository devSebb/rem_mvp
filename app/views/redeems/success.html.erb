<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="text-center">
      <div class="text-6xl mb-4">ðŸŽ‰</div>
      <h2 class="text-3xl font-bold text-gray-900">Gift Card Redeemed!</h2>
      <p class="mt-2 text-sm text-gray-600">
        Your gift card has been successfully redeemed
      </p>
    </div>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <!-- Success Message -->
      <div class="bg-green-50 border border-green-200 rounded-lg p-6 mb-6">
        <div class="flex items-center">
          <div class="text-3xl mr-4">âœ…</div>
          <div>
            <h3 class="text-lg font-semibold text-green-800">Redemption Successful!</h3>
            <p class="text-green-700 mt-1">
              Your gift card has been processed and the funds are now available at the merchant.
            </p>
          </div>
        </div>
      </div>

      <!-- Transaction Details -->
      <div class="bg-gray-50 rounded-lg p-4 mb-6">
        <h4 class="text-sm font-medium text-gray-900 mb-3">Transaction Details</h4>
        <dl class="space-y-2 text-sm">
          <div class="flex justify-between">
            <dt class="text-gray-600">Amount:</dt>
            <dd class="font-medium text-gray-900">
              <%= @gift_card.currency %> <%= @gift_card.amount / 100.0 %>
            </dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-gray-600">Redeemed at:</dt>
            <dd class="font-medium text-gray-900">
              <%= @gift_card.merchant&.store_name || 'Merchant' %>
            </dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-gray-600">Date:</dt>
            <dd class="font-medium text-gray-900">
              <%= @gift_card.redeemed_at&.strftime('%B %d, %Y at %I:%M %p') || Time.current.strftime('%B %d, %Y at %I:%M %p') %>
            </dd>
          </div>
        </dl>
      </div>

      <!-- Next Steps -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
        <div class="flex">
          <div class="text-blue-400 mr-3">ðŸ’¡</div>
          <div class="text-sm text-blue-800">
            <strong>What's next?</strong><br>
            You can now use your gift card balance at the merchant. 
            The merchant will have access to your gift card details for the transaction.
          </div>
        </div>
      </div>

      <!-- Actions -->
      <div class="space-y-3">
        <%= link_to root_path, 
            class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition duration-150 ease-in-out" do %>
          Return to Home
        <% end %>

        <button onclick="window.print()" 
                class="w-full flex justify-center py-3 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition duration-150 ease-in-out">
          Print Receipt
        </button>
      </div>

      <!-- Support -->
      <div class="mt-6 text-center">
        <p class="text-xs text-gray-500">
          Need help? Contact our support team for assistance.
        </p>
      </div>
    </div>
  </div>
</div>

<!-- Print Styles -->
<style media="print">
  @media print {
    body { background: white !important; }
    .bg-gray-50 { background: white !important; }
    .shadow { box-shadow: none !important; }
    .sm\\:mx-auto { margin: 0 !important; }
    .py-12 { padding: 1rem !important; }
    .mt-8 { margin-top: 1rem !important; }
  }
</style>
