<% if user_signed_in? && current_user.admin? %>
  <div class="bg-white shadow rounded-lg p-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Admin Dashboard</h1>
    
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-3 mb-8">
      <div class="bg-blue-50 rounded-lg p-4">
        <h3 class="text-lg font-medium text-blue-900">Total Gift Cards</h3>
        <p class="text-3xl font-bold text-blue-600"><%= GiftCard.count %></p>
      </div>
      
      <div class="bg-green-50 rounded-lg p-4">
        <h3 class="text-lg font-medium text-green-900">Total Redeemed</h3>
        <p class="text-3xl font-bold text-green-600"><%= GiftCard.where(status: "redeemed").count %></p>
      </div>
      
      <div class="bg-purple-50 rounded-lg p-4">
        <h3 class="text-lg font-medium text-purple-900">Total Users</h3>
        <p class="text-3xl font-bold text-purple-600"><%= User.count %></p>
      </div>

    </div>
    
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div class="bg-gray-50 rounded-lg p-4">
        <h3 class="text-lg font-medium text-gray-900 mb-2">Active Gift Cards</h3>
        <p class="text-2xl font-bold text-gray-600"><%= GiftCard.where(status: "active").count %></p>
      </div>
      
      <div class="bg-gray-50 rounded-lg p-4">
        <h3 class="text-lg font-medium text-gray-900 mb-2">Total Merchants</h3>
        <p class="text-2xl font-bold text-gray-600"><%= Merchant.count %></p>
      </div>
    </div>
  </div>
<% else %>
  <div class="text-center">
    <h1 class="text-4xl font-bold text-gray-900 sm:text-5xl md:text-6xl">
      Gift Cards Made Simple
    </h1>
    <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
      Buy and send gift cards instantly. Merchants can redeem them easily with our secure system.
    </p>
    
    <div class="mt-5 max-w-md mx-auto sm:flex sm:justify-center md:mt-8">
      <% if user_signed_in? %>
        <div class="rounded-md shadow">
          <%= link_to "Buy Gift Card", new_gift_card_path, class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 md:py-4 md:text-lg md:px-10" %>
        </div>
        <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
          <%= link_to "My Wallet", gift_cards_path, class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-blue-600 bg-white hover:bg-gray-50 md:py-4 md:text-lg md:px-10" %>
        </div>
      <% else %>
        <div class="rounded-md shadow">
          <%= link_to "Get Started", new_user_registration_path, class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 md:py-4 md:text-lg md:px-10" %>
        </div>
        <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
          <%= link_to "Sign In", new_user_session_path, class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-blue-600 bg-white hover:bg-gray-50 md:py-4 md:text-lg md:px-10" %>
        </div>
      <% end %>
    </div>
  </div>

  <% if user_signed_in? && @recent_gift_cards&.any? %>
    <div class="mt-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Recent Gift Cards</h2>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% @recent_gift_cards.each do |gift_card| %>
          <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                    <span class="text-white font-bold text-sm">G</span>
                  </div>
                </div>
                <div class="ml-5 w-0 flex-1">
                  <dl>
                    <dt class="text-sm font-medium text-gray-500 truncate">
                      Amount
                    </dt>
                    <dd class="text-lg font-medium text-gray-900">
                      <%= number_to_currency(gift_card.amount / 100.0, unit: gift_card.currency == 'USD' ? '$' : gift_card.currency) %>
                    </dd>
                  </dl>
                </div>
              </div>
              <div class="mt-4">
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-500">
                    From: <%= gift_card.sender.name %>
                  </span>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= gift_card.status == 'active' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                    <%= gift_card.status.humanize %>
                  </span>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

