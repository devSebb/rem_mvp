<div class="max-w-md mx-auto">
  <div class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Confirm Redemption</h2>
    
    <% if @gift_card %>
      <div class="bg-gray-50 rounded-lg p-4 mb-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Gift Card Details</h3>
        
        <dl class="space-y-3">
          <div>
            <dt class="text-sm font-medium text-gray-500">Amount</dt>
            <dd class="text-2xl font-bold text-gray-900">
              <%= number_to_currency(@gift_card.amount / 100.0, unit: @gift_card.currency == 'USD' ? '$' : @gift_card.currency) %>
            </dd>
          </div>
          
          <div>
            <dt class="text-sm font-medium text-gray-500">From</dt>
            <dd class="text-sm text-gray-900"><%= @gift_card.sender.name %></dd>
          </div>
          
          <div>
            <dt class="text-sm font-medium text-gray-500">To</dt>
            <dd class="text-sm text-gray-900">
              <%= @gift_card.recipient&.name || 'Unknown' %>
              <% if @gift_card.recipient&.phone.present? %>
                <span class="text-gray-500">(<%= @gift_card.recipient.phone %>)</span>
              <% end %>
            </dd>
          </div>
          
          <% if @gift_card.expires_at.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Expires</dt>
              <dd class="text-sm text-gray-900"><%= @gift_card.expires_at.strftime('%B %d, %Y') %></dd>
            </div>
          <% end %>
        </dl>
      </div>
      
      <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800">Please verify the details</h3>
            <div class="mt-2 text-sm text-yellow-700">
              <p>Make sure the amount and recipient information are correct before proceeding with the redemption.</p>
            </div>
          </div>
        </div>
      </div>
      
      <%= form_with url: confirm_merchant_redemptions_path, method: :post, local: true, class: "space-y-6" do |form| %>
        <%= form.hidden_field :gift_card_id, value: @gift_card.id %>
        
        <div class="flex items-center justify-between">
          <%= link_to "Cancel", new_merchant_redemption_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
          <%= form.submit "Confirm Redemption", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center">
        <p class="text-gray-500">No gift card found to redeem.</p>
        <%= link_to "Try Again", new_merchant_redemption_path, class: "mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>
</div>
