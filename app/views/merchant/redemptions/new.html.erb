<div class="max-w-md mx-auto">
  <div class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Redeem Gift Card</h2>
    
    <%= form_with url: merchant_redemptions_path, method: :post, local: true, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :code, "Gift Card Code", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :code, 
              class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md uppercase",
              placeholder: "REM-XXXX-XXXX-XXXX",
              autofocus: true,
              required: true %>
        <p class="mt-1 text-sm text-gray-500">Enter the gift card code or scan the QR code</p>
      </div>

      <!-- DEVELOPMENT ONLY: Show available test codes -->
      <!-- TODO: Remove this section before production deployment -->
      <% if Rails.env.development? %>
        <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
          <h3 class="text-sm font-medium text-yellow-800 mb-2">ðŸ§ª Development Test Codes</h3>
          <div class="space-y-2">
            <div class="flex items-center justify-between">
              <span class="text-sm text-yellow-700">REM-TEST-1234-5678</span>
              <span class="text-xs text-yellow-600">$30.00</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm text-yellow-700">REM-TEST-ABCD-EFGH</span>
              <span class="text-xs text-yellow-600">$20.00</span>
            </div>
          </div>
          <p class="text-xs text-yellow-600 mt-2">
            Copy and paste these codes to test redemption functionality.
          </p>
        </div>
      <% end %>

      <div class="flex items-center justify-between">
        <%= link_to "Back to Dashboard", merchant_root_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        <%= form.submit "Find Gift Card", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>
</div>
