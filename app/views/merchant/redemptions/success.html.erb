<div class="max-w-md mx-auto">
  <div class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
    <!-- Success Icon -->
    <div class="text-center mb-6">
      <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100">
        <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>
    </div>

    <div class="text-center">
      <h2 class="text-2xl font-bold text-gray-900 mb-2">Redemption Successful!</h2>
      <% if @gift_card&.remaining_balance&.> 0 %>
        <p class="text-gray-600 mb-6">The gift card has been partially redeemed. The remaining balance can be used for future purchases.</p>
      <% else %>
        <p class="text-gray-600 mb-6">The gift card has been fully redeemed.</p>
      <% end %>
    </div>

    <% if @gift_card %>
      <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
        <h3 class="text-lg font-medium text-green-900 mb-4">Transaction Details</h3>
        
        <dl class="space-y-3">
          <div class="flex justify-between">
            <dt class="text-sm font-medium text-green-700">Amount Redeemed</dt>
            <dd class="text-lg font-bold text-green-900">
              <%= number_to_currency((@gift_card.amount - @gift_card.remaining_balance) / 100.0, unit: @gift_card.currency == 'USD' ? '$' : @gift_card.currency) %>
            </dd>
          </div>
          
          <% if @gift_card.remaining_balance > 0 %>
            <div class="flex justify-between">
              <dt class="text-sm font-medium text-green-700">Remaining Balance</dt>
              <dd class="text-lg font-bold text-blue-600">
                <%= number_to_currency(@gift_card.remaining_balance / 100.0, unit: @gift_card.currency == 'USD' ? '$' : @gift_card.currency) %>
              </dd>
            </div>
          <% end %>
          
          <div class="flex justify-between">
            <dt class="text-sm font-medium text-green-700">Redeemed At</dt>
            <dd class="text-sm text-green-900">
              <%= @gift_card.redeemed_at&.strftime('%B %d, %Y at %I:%M %p') || Time.current.strftime('%B %d, %Y at %I:%M %p') %>
            </dd>
          </div>
          
          <div class="flex justify-between">
            <dt class="text-sm font-medium text-green-700">From</dt>
            <dd class="text-sm text-green-900"><%= @gift_card.sender.name %></dd>
          </div>
          
          <div class="flex justify-between">
            <dt class="text-sm font-medium text-green-700">To</dt>
            <dd class="text-sm text-green-900">
              <%= @gift_card.recipient&.name || 'Unknown' %>
            </dd>
          </div>
        </dl>
      </div>
    <% end %>

    <div class="flex flex-col space-y-3">
      <%= link_to "Redeem Another Gift Card", new_merchant_redemption_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline text-center" %>
      <%= link_to "Back to Dashboard", merchant_root_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline text-center" %>
    </div>
  </div>
</div>
