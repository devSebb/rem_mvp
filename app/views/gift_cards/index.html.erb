<div class="px-4 sm:px-0">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">My Gift Cards</h1>
    <%= link_to "Buy New Gift Card", new_gift_card_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
  </div>

  <% if @gift_cards.any? %>
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% @gift_cards.each do |gift_card| %>
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                  <span class="text-white font-bold text-sm">G</span>
                </div>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">
                    Amount
                  </dt>
                  <dd class="text-lg font-medium text-gray-900">
                    <%= number_to_currency(gift_card.amount / 100.0, unit: gift_card.currency == 'USD' ? '$' : gift_card.currency) %>
                  </dd>
                </dl>
              </div>
            </div>
            
            <div class="mt-4">
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-500">
                  <% if gift_card.sender == current_user %>
                    To: <%= gift_card.recipient&.name || 'Unknown' %>
                  <% else %>
                    From: <%= gift_card.sender.name %>
                  <% end %>
                </span>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= 
                  case gift_card.status
                  when 'active'
                    'bg-green-100 text-green-800'
                  when 'redeemed'
                    'bg-blue-100 text-blue-800'
                  when 'expired'
                    'bg-red-100 text-red-800'
                  when 'canceled'
                    'bg-gray-100 text-gray-800'
                  else
                    'bg-gray-100 text-gray-800'
                  end
                %>">
                  <% if gift_card.status == 'active' %>
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                  <% elsif gift_card.status == 'redeemed' %>
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  <% elsif gift_card.status == 'expired' %>
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                    </svg>
                  <% elsif gift_card.status == 'canceled' %>
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                    </svg>
                  <% end %>
                  <%= gift_card.status.humanize %>
                </span>
              </div>
              
              <% if gift_card.merchant.present? %>
                <div class="mt-2">
                  <span class="text-sm text-gray-500">
                    <% if gift_card.redeemed? %>
                      Redeemed at: <%= gift_card.merchant.store_name %>
                    <% else %>
                      Store: <%= gift_card.merchant.store_name %>
                    <% end %>
                  </span>
                </div>
              <% end %>
              
              <% if gift_card.redeemed_at.present? %>
                <div class="mt-2">
                  <span class="text-sm text-gray-500">
                    Redeemed: <%= gift_card.redeemed_at.strftime('%B %d, %Y') %>
                  </span>
                </div>
              <% elsif gift_card.expires_at.present? %>
                <div class="mt-2">
                  <span class="text-sm text-gray-500">
                    Expires: <%= gift_card.expires_at.strftime('%B %d, %Y') %>
                  </span>
                </div>
              <% end %>
            </div>
            
            <!-- DEVELOPMENT ONLY: Show raw code for testing -->
            <!-- TODO: Remove this section before production deployment -->
            <% if Rails.env.development? && gift_card.raw_code.present? %>
              <div class="mt-3 bg-yellow-50 border border-yellow-200 rounded-md p-2">
                <p class="text-xs font-medium text-yellow-800">ðŸ§ª Test Code:</p>
                <p class="text-sm font-mono font-bold text-yellow-900"><%= gift_card.raw_code %></p>
              </div>
            <% end %>

            <div class="mt-4">
              <%= link_to "View Details", gift_card_path(gift_card), class: "text-blue-600 hover:text-blue-500 text-sm font-medium" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="mx-auto h-12 w-12 text-gray-400">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
        </svg>
      </div>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No gift cards</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by buying your first gift card.</p>
      <div class="mt-6">
        <%= link_to "Buy Gift Card", new_gift_card_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
      </div>
    </div>
  <% end %>
</div>
