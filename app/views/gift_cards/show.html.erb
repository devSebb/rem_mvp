<div class="max-w-2xl mx-auto">
  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="px-6 py-8">
      <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-bold text-gray-900">Gift Card Details</h1>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= 
          case @gift_card.status
          when 'active'
            'bg-green-100 text-green-800'
          when 'redeemed'
            'bg-blue-100 text-blue-800'
          when 'expired'
            'bg-red-100 text-red-800'
          when 'canceled'
            'bg-gray-100 text-gray-800'
          else
            'bg-gray-100 text-gray-800'
          end
        %>">
          <% if @gift_card.status == 'active' %>
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          <% elsif @gift_card.status == 'redeemed' %>
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
          <% elsif @gift_card.status == 'expired' %>
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
          <% elsif @gift_card.status == 'canceled' %>
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          <% end %>
          <%= @gift_card.status.humanize %>
        </span>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-4">Card Information</h3>
          
          <dl class="space-y-3">
            <div>
              <dt class="text-sm font-medium text-gray-500">Amount</dt>
              <dd class="text-2xl font-bold text-gray-900">
                <%= number_to_currency(@gift_card.amount / 100.0, unit: @gift_card.currency == 'USD' ? '$' : @gift_card.currency) %>
              </dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">From</dt>
              <dd class="text-sm text-gray-900"><%= @gift_card.sender.name %></dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">To</dt>
              <dd class="text-sm text-gray-900"><%= @gift_card.recipient&.name || 'Unknown' %></dd>
            </div>
            
            <% if @gift_card.merchant.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Store</dt>
                <dd class="text-sm text-gray-900"><%= @gift_card.merchant.store_name %></dd>
              </div>
            <% end %>
            
            <% if @gift_card.expires_at.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Expires</dt>
                <dd class="text-sm text-gray-900"><%= @gift_card.expires_at.strftime('%B %d, %Y at %I:%M %p') %></dd>
              </div>
            <% end %>
            
            <% if @gift_card.redeemed_at.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Redeemed</dt>
                <dd class="text-sm text-gray-900">
                  <%= @gift_card.redeemed_at.strftime('%B %d, %Y at %I:%M %p') %>
                  <% if @gift_card.merchant.present? %>
                    <br><span class="text-xs text-gray-500">at <%= @gift_card.merchant.store_name %></span>
                  <% end %>
                </dd>
              </div>
            <% end %>

            <!-- DEVELOPMENT ONLY: Show raw code for testing -->
            <!-- TODO: Remove this section before production deployment -->
            <% if Rails.env.development? && @gift_card.raw_code.present? %>
              <div class="bg-yellow-50 border border-yellow-200 rounded-md p-3 mt-4">
                <dt class="text-sm font-medium text-yellow-800">ðŸ§ª Development Test Code</dt>
                <dd class="text-lg font-mono font-bold text-yellow-900 mt-1">
                  <%= @gift_card.raw_code %>
                </dd>
                <p class="text-xs text-yellow-700 mt-1">
                  This code is only visible in development mode for testing purposes.
                </p>
              </div>
            <% end %>
          </dl>
        </div>

        <% if @gift_card.active? %>
          <div class="text-center">
            <h3 class="text-lg font-medium text-gray-900 mb-4">QR Code</h3>
            <div class="bg-white p-4 rounded-lg border-2 border-gray-200 inline-block">
              <% 
                # Generate QR code with the gift card code
                # For security, we'll show a masked version in the UI
                # The actual code should only be revealed via SMS/email
                qr_data = "Gift Card ID: #{@gift_card.id}"
                qr = RQRCode::QRCode.new(qr_data)
                svg = qr.as_svg(
                  offset: 0,
                  color: '000',
                  shape_rendering: 'crispEdges',
                  module_size: 6,
                  standalone: true
                )
              %>
              <%= raw svg %>
            </div>
            <p class="mt-2 text-sm text-gray-500">Show this QR code to the merchant</p>
            <p class="mt-1 text-xs text-gray-400">Code will be sent via SMS/email</p>
          </div>
        <% end %>
      </div>

      <div class="mt-8 flex justify-between">
        <%= link_to "Back to Wallet", gift_cards_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        <% if @gift_card.active? %>
          <%= link_to "Buy Another", new_gift_card_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
