<div class="max-w-md mx-auto text-center">
  <div class="bg-white shadow-lg rounded-lg px-8 pt-6 pb-8 mb-4">
    <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100 mb-4">
      <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
    </div>
    
    <h1 class="text-2xl font-bold text-gray-900 mb-2">Payment Successful!</h1>
    <p class="text-gray-600 mb-6">Your gift card has been created and sent to the recipient.</p>
    
    <% if @gift_card %>
      <div class="bg-gray-50 rounded-lg p-4 mb-6">
        <h3 class="text-lg font-medium text-gray-900 mb-2">Gift Card Details</h3>
        <p class="text-sm text-gray-600">
          Amount: <span class="font-semibold"><%= number_to_currency(@gift_card.amount / 100.0, unit: @gift_card.currency == 'USD' ? '$' : @gift_card.currency) %></span>
        </p>
        <p class="text-sm text-gray-600">
          To: <span class="font-semibold"><%= @gift_card.recipient&.name || 'Unknown' %></span>
        </p>
        <% if @gift_card.merchant.present? %>
          <p class="text-sm text-gray-600">
            Store: <span class="font-semibold"><%= @gift_card.merchant.store_name %></span>
          </p>
        <% end %>
      </div>
    <% end %>
    
    <div class="space-y-3">
      <%= link_to "View Gift Card", @gift_card ? gift_card_path(@gift_card) : gift_cards_path, class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to "Buy Another Gift Card", new_gift_card_path, class: "w-full bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to "Back to Home", root_path, class: "w-full text-blue-600 hover:text-blue-500 font-medium" %>
    </div>
  </div>
</div>
